{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./testsArea",
    "./dist"
  ],
  "compilerOptions": {
    "target": "es2018",
     "lib": ["es2018"],
    "module": "esnext",
    "moduleResolution": "bundler",
     "baseUrl": "./",
     "paths": {
       "@uic": ["src/implementations/uic/uic.ts"],
       "@uicsds": ["src/implementations/uic/uicsds.ts"],
       "@uic/interfaces": ["src/interfaces/uic/interfaces.ts"],
       "@graphs/graph": ["src/implementations/graphs/graph.ts"],
       "@graphs/tree": ["src/implementations/graphs/tree.ts"],
       "@graphs/interfaces": ["src/interfaces/graphs/interfaces.ts"],
       "@utils/graphErrorsEmitters": ["src/utilsArea/errorEmitters/graphErrorEmitters.ts"],
       "@utils/treeErrorsEmitters": ["src/utilsArea/errorEmitters/treeErrorEmitters.ts"],
       "@mutationsHistory/interfaces": ["src/interfaces/MutationsHistory/interfaces.ts"],
       "@mutationsHistory": ["src/implementations/MutationsHistory/MutationsHistory.ts"],
       "@algorithms/binarySearch": ["src/implementations/algorithms/binarySearch.ts"],
       "@algorithms/binarySearch/interfaces": ["src/interfaces/algorithms/binarySearch.ts"],
       "@algorithms/duplicatesSearcher": ["src/implementations/algorithms/duplicatesSearcher.ts"],
       "@algorithms/duplicatesSearcher/interfaces": ["src/interfaces/algorithms/duplicatesSearcher.ts"],
       "@numbers/validators/isNumber": ["./src/implementations/NumberValidators/isNumber.ts"],
       "@numbers/validators/regexp": ["./src/implementations/NumberValidators/NumberRegExps.ts"]
     },
     "declaration": true,
     "emitDeclarationOnly": false,
     "outDir": "./dist",
     "noEmit": false,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "listEmittedFiles": true
  }
}
