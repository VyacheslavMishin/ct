{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./testsArea",
    "./dist"
  ],
  "compilerOptions": {
    "target": "es2018",
     "lib": ["es2018"],
    "module": "esnext",
    "moduleResolution": "bundler",
     "baseUrl": "./",
     "paths": {
       "@implementations": ["src/implementations/index.ts"],
       "@interfaces": ["src/interfaces/index.ts"],
       "@utils/graphErrorsEmitters": ["src/utilsArea/errorEmitters/graphErrorEmitters.ts"],
       "@utils/treeErrorsEmitters": ["src/utilsArea/errorEmitters/treeErrorEmitters.ts"],
     },
     "declaration": true,
     "emitDeclarationOnly": false,
     "outDir": "./dist",
     "noEmit": false,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "listEmittedFiles": true
  }
}
